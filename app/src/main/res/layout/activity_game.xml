<!--    LinearLayout: that contain 1 TextInputLayout and 1 Sending Button-->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="15dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

<!--        &lt;!&ndash;        static TextView for "ID sent to : " text&ndash;&gt;-->
        <TextView
            android:id="@+id/tvContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Sent To : "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="invisible"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textAlignment="center"/>

<!--     TextInputLayout for getting Phone Number for the user-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:hint="Enter Phone Number"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            android:textAlignment="center"
            app:boxCornerRadiusTopStart="8dp"
            app:hintTextColor="@color/white"
            app:errorTextAppearance="@color/black"
            app:errorTextColor="@color/black"
            app:startIconDrawable="@drawable/baseline_keyboard_24">


<!--            EditText for Phone Number -->
            <EditText
                android:id="@+id/edNum"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="48dp"
                android:inputType="number"/>


            <!--                Button for picking Contact with Name and Phone Number -->
            <Button
                android:id="@+id/btPickContact"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Pick No"
                android:textAlignment="center"
                android:drawableStart="@drawable/baseline_contact_page_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:textStyle="bold"/>

    <!--                Button for sending the randomly generated Game ID to enter Phone Number -->
            <Button
                android:id="@+id/btSendMessage"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Send ID"
                android:textAlignment="center"
                android:drawableStart="@drawable/baseline_send_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:textStyle="bold"/>


        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


