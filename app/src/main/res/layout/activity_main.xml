<?xml version="1.0" encoding="utf-8"?>
<!--parent root:-  linearlayout-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--    linearLyt with horizontal layout orientation-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

<!--        ImageView of X image-->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/letter_x" />

<!--        static TextView of "v/s"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="6dp"
            android:text="v/s"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

<!--        ImageView of O image-->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/letter_o" />

        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="World Of Star And Moon"-->
        <!--            android:textAlignment="center"-->
        <!--            android:textColor="@color/black"-->
        <!--            android:textSize="18dp"-->
        <!--            android:textStyle="bold" />-->


    </LinearLayout>

<!--    OFFLINE MODE Button -->
    <Button
        android:id="@+id/playOfflineBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@color/black"
        android:elevation="5dp"
        android:outlineSpotShadowColor="@color/white"
        android:padding="8dp"
        android:text="Offline Mode"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold" />

<!--    static TextView of Or text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textAlignment="center"
        android:textSize="28dp"
        android:textStyle="bold" />

    <!--    ONLINE MODE Button -->
    <Button
        android:id="@+id/createOnlineBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@color/black"
        android:elevation="10dp"
        android:outlineSpotShadowColor="@color/white"
        android:padding="8dp"
        android:text="Online Mode"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold" />

<!--    static TextView of Or text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textAlignment="center"
        android:textSize="28dp"
        android:textStyle="bold" />

<!--   TextInputLayout for getting Game ID form particular user -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Game ID"
        android:padding="10dp"
        android:textAlignment="center"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:errorTextAppearance="@color/black"
        app:errorTextColor="@color/black"
        app:hintTextColor="@color/white"
        app:startIconDrawable="@drawable/baseline_videogame_asset_24">

<!--        Input Game ID in EditText-->
        <EditText
            android:id="@+id/gameIdEd"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

