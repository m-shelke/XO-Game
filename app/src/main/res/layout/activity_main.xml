<?xml version="1.0" encoding="utf-8"?>

<!--root tag-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--    linearLyt with horizontal layout orientation-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/letter_x"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v/s"
            android:layout_marginEnd="6dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/letter_o"/>

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="World Of Star And Moon"-->
<!--            android:textAlignment="center"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="18dp"-->
<!--            android:textStyle="bold" />-->


    </LinearLayout>

    <Button
        android:id="@+id/playOfflineBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:elevation="5dp"
        android:outlineSpotShadowColor="@color/white"
        android:background="@color/black"
        android:padding="8dp"
        android:textAlignment="center"
        android:text="Offline Mode"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/createOnlineBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:elevation="10dp"
        android:background="@color/black"
        android:outlineSpotShadowColor="@color/white"
        android:padding="8dp"
        android:textAlignment="center"
        android:text="Online Mode"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textAlignment="center"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Game ID"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
       android:layout_margin="10dp"
        android:padding="10dp"
        android:textAlignment="center"
        app:boxCornerRadiusTopStart="8dp"
        app:hintTextColor="@color/white"
        app:errorTextAppearance="@color/black"
        app:errorTextColor="@color/black"
        app:startIconDrawable="@drawable/baseline_videogame_asset_24">

        <EditText
            android:id="@+id/gameIdEd"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:inputType="number"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!--    <EditText-->
<!--        android:id="@+id/gameIdEd"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textSize="24sp"-->
<!--        android:textStyle="bold"-->
<!--        android:textAlignment="center"-->
<!--        android:inputType="number"-->
<!--        android:layout_margin="20dp"-->
<!--        android:hint="Enter Lobby ID"-->
<!--        android:padding="8dp"/>-->

    <Button
        android:id="@+id/joinOnlineBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:elevation="10dp"
        android:background="@color/black"
        android:outlineSpotShadowColor="@color/white"
        android:padding="8dp"
        android:text="Join Lobby"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>